<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/cb_layout_toolbar"/>

        <com.limy.codebase.view.SettingView
            android:id="@+id/setting_auto_offline_on"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@drawable/selector_setting_item_bg"

            app:setting_subtitle="@string/title"
            app:setting_title="@string/subtitle"
            app:show_indicator="true"/>

        <com.limy.codebase.view.SettingView
            android:id="@+id/setting_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@drawable/selector_setting_item_bg"
            app:setting_subtitle="..."
            app:setting_title="@string/title"
            app:show_indicator="false"/>

        <com.limy.codebase.view.SettingView
            android:id="@+id/setting_ongoing_push_on"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@drawable/selector_setting_item_bg"
            app:setting_subtitle="在通知栏直接查看最新内容，每隔 15 分钟更新一次"
            app:setting_title="@string/title"
            app:show_indicator="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <com.limy.codebase.view.SettingView
            android:id="@+id/setting_push_on"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/selector_setting_item_bg"
            app:setting_subtitle=""
            app:setting_title="@string/setting_push_on"
            app:show_indicator="true"/>


        <com.limy.codebase.view.SettingView
            android:id="@+id/check_update"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/selector_setting_item_bg"
            app:setting_subtitle=""
            app:setting_title="@string/check_update"
            app:show_indicator="false"/>

        <com.limy.codebase.view.SettingView
            android:id="@+id/feed_back"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/selector_setting_item_bg"
            app:setting_subtitle=""
            app:setting_title="@string/feedback"
            app:show_indicator="false"/>

        <TextView
            android:id="@+id/version"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:textColor="@color/text_color_grey"
            android:textSize="12sp"/>
    </LinearLayout>
</ScrollView>